</fieldset>
<div>
  <table id="tableContent">
    <tr>
	<th class="id">ID</th>
	<th>Exercise Name</th>
	<th>Reps</th>
	<th>Weight</th>
	<th>Date</th>
	<th>Units</th>
    </tr>
  </table>
</div>
