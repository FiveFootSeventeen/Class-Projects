

<fieldset>
  <label for="name">Exercise name: <input type="text" id="name" name="name"></label>
  <label for="name">Reps: <input type="text" id="reps" name="reps"></label>
  <label for="name">Weight: <input type="text" id="weight" name="weight"></label>
  <label for="name">Date: <input type="date" id="date" name="date"></label>
